<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/">長野ケーキ</a>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path %>
                </li>
                <li class="nav-item">
                  <%= link_to 'マイページ', customers_path %>
                </li>
                <li class="nav-item">
                  <%= link_to 'カート', cart_items_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
                </li>
              <% elsif admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to "商品一覧", admin_items_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "会員一覧", admin_customers_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "注文履歴一覧", admin_root_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "ジャンル一覧", admin_genres_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト",destroy_admin_session_path, method: :delete %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "About", about_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_customer_registration_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_customer_session_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer class="pt-5 pb-4">
      <div class="container mt-5">
  	    <div class="row">
    	    <div class="mx-auto">
    		    <p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
      </div>
    </footer>
  </body>
</html>
