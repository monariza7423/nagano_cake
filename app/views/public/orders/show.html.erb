<div class="container">
  <h1>注文履歴詳細</h1>
  
  <p>注文情報</p>
  <table class="table">
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        <%= @order.invoice_postalcode %>
        <%= @order.invoice_address %>
        <%= @order.invoice_name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.pay_method_i18n %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.status_i18n %></td>
    </tr>
  </table>
  
  <p>請求情報</p>
  <table class="table">
    <tr>
      <th>商品合計</th>
      <td><%= @order.billing - @order.postage %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <th><strong>ご請求額</strong></th>
      <td><%= @order.billing %></td>
    </tr>
  </table>
  
  <p>注文内容</p>
  <table class="table">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <% @order.order_details.each do |order_detail| %>
    <tbody>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.purcase_price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.purcase_price.to_i * order_detail.amount.to_i %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>