<div class="container">
  <div class="row">
    <div class="col-md-12">
    <h1>商品一覧</h1><h3>全<%= @items.count %>件</h3>
    </div> 
  </div>
  <div class="row">
    <div class="col-md9">
      <div class="col-md-2">  
        <% @items.each do |item| %>
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.image, size: "250x150" %>
          <% end %>
          
          <%= item.name %>
          
          <p>¥<%= item.price %></p>
        <% end %>
      </div>
    </div>
    
    <%= paginate @items %>
  </div>
</div>