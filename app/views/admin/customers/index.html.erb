<h1>会員一覧</h1>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @customers.each do |customer| %>
  <tbody>
    <tr>
      <th><%= customer.id %></th>
      <th>
        <%= link_to admin_customer_path(customer.id) do %>
          <%= customer.last_name %>
          <%= customer.first_name %>
        <% end %>
      </th>
      <th><%= customer.email %></th>
      <th>
        <% if customer.is_deleted == false %>
          有効
        <% else %>
          退会済
        <% end %>
      </th>
    </tr>
  </tbody>
  <% end %>
</table>