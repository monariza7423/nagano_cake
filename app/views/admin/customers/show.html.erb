<h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>

<table>
  <tr>
    <th>会員ID</th>
    <th><%= @customer.id %></th>
  </tr>
  
  <tr>
    <th>氏名</th>
    <th>
      <%= @customer.last_name %>
      <%= @customer.first_name %>
    </th>
  </tr>
  
  <tr>
    <th>ふりがな</th>
    <th>
      <%= @customer.last_name_kana %>
      <%= @customer.first_name_kana %>
    </th>
  </tr>
  
  <tr>
    <th>郵便番号</th>
    <th><%= @customer.postal_code %></th>
  </tr>
  
  <tr>
    <th>住所</th>
    <th><%= @customer.address %></th>
  </tr>
  
  <tr>
    <th>電話番号</th>
    <th><%= @customer.telephone_number %></th>
  </tr>
  
  <tr>
    <th>メールアドレス</th>
    <th><%= @customer.email %></th>
  </tr>
  
  <tr>
    <th>会員ステータス</th>
    <th>
      <% if @customer.is_active == false %>
        有効
      <% else %>
        退会済
      <% end %>
    </th>
  </tr>
</table>

<%= link_to "編集", edit_admin_customer_path(@customer.id) %>
